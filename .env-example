XUNO_TELEGRAM_API_ID=1234
XUNO_TELEGRAM_API_HASH=1234
CREATOR_USERNAME=@username_here

# OpenTelemetry/Langfuse configuration for DSPy instrumentation
# Required: OTLP endpoint URL for tracing
OTEL_EXPORTER_OTLP_ENDPOINT=https://cloud.langfuse.com/public/ingest

# Required: OTLP headers (Basic auth with base64 encoded credentials)
# Option 1: Set directly (base64 encoded LANGFUSE_PUBLIC_KEY:LANGFUSE_SECRET_KEY)
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic <base64_encoded_credentials>

# Option 2: Provide Langfuse keys separately (headers will be built automatically)
# Note: If both OTEL_EXPORTER_OTLP_HEADERS and Langfuse keys are provided,
# OTEL_EXPORTER_OTLP_HEADERS takes precedence
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_BASE_URL=http://localhost:3000
